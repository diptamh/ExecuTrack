{
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/.sfdx": true
    },
    "[javascript]": {
      "editor.formatOnSave": true,
      "editor.formatOnPaste": true,
      "editor.detectIndentation": false,
      "editor.tabSize": 2,
    },
    "[html]": {
      "editor.formatOnSave": true,
      "editor.formatOnPaste": true,
      "editor.tabSize": 2,
    },
    "go.delveConfig": {
      "dlvLoadConfig": {
        "followPointers": true,
        "maxVariableRecurse": 3,
        "maxStringLen": 400,
        "maxArrayValues": 400,
        "maxStructFields": -1
      },
      "apiVersion": 2,
      "showGlobalVariables": false
    }
    
  }